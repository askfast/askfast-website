article#sub-prices

  #row1.container-fluid.container-content
    .row
      .col-md-6.col-md-push-6
       img.img-responsive.warranty(src='../images/warranty.png',
       alt='Warranty')
      .col-md-6.col-md-pull-6
        h1.text-pink {{ui.pages.prices.row1.title}}
        p(ng-repeat='content in ui.pages.prices.row1.content') {{content}}
    // Input From - To

      .row.indicators
      .col-md-5.input-emphasize
        input.form-control(type='text', placeholder='{{ui.pages.prices.row1.placeholders.from}}')
      .col-md-2.piles
        | &nbsp;
      .col-md-5.input-emphasize
        input.form-control(type='text', placeholder='{{ui.pages.prices.row1.placeholders.to}}')

  #row2.container-fluid.container-content.container-dark
    .row
      .col-md-6
        h2 {{ui.pages.prices.row2.titles.inbound}}
        table.table
          tr
            td#sms-price-inbound-icon.price-thumb
            td SMS
              .p Mobile Number
            td.text-right Starting 0.01 €
              .p 45€ per month
          tr
            td#phone-price-inbound-icon.price-thumb
            td Phone
              .p Local or Virtual Numbers
            td.text-right Starting 0.01 €
              .p 2€/month
          tr
            td#email-price-inbound-icon.price-thumb
            td Email
            td.text-right 1 00 transaction 0.01 €
          tr
            td#gtalk-price-inbound-icon.price-thumb
            td gTalk
            td.text-right Free
          tr
            td#twitter-price-inbound-icon.price-thumb
            td Twitter
            td.text-right Free
      .col-md-6
        h2 {{ui.pages.prices.row2.titles.outbound}}
        table.table
          tr
            td#sms-price-outbound-icon.price-thumb

            td SMS
              td.text-right Starting 0.01 €
          tr
            td#phone-price-outbound-icon.price-thumb
            td Phone
            td.text-right Starting 0.01 €
          tr
            td#email-price-outbound-icon.price-thumb
             td Email
            td.text-right 100 transaction from 0.01 €
          tr
            td#gtalk-price-outbound-icon.price-thumb
            td gTalk
            td.text-right Free
          tr
            td#twitter-price-outbound-icon.price-thumb
            td Twitter
            td.text-right Free
    .row
     // CSV download file for all the countries
      .col-md-12.text-center
        p
          a.btn.btn-primary(href='') {{ui.pages.prices.row2.cta}}

  #row3.container-fluid.container-content
    .row
      .col-md-6.col-md-push-6
        ul.list-inline
          li
              img.img-responsive(src='../images/enterprise.png',
              alt='Enterprise prices')

      .col-md-6.col-md-pull-6
        h1.text-pink {{ui.pages.prices.row3.title}}
        p(ng-repeat='content in ui.pages.prices.row3.content') {{content}}
    .row
      .col-md-12.text-center
        p
          a.btn.btn-primary(ng-click='redirectTo("about", "contact")')
            | {{ui.pages.prices.row3.cta}}